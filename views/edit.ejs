<%- include('header'); -%>

<h1 class="composeTitle">Write your own!</h1>
<form action="/updates" method="post">
  <div class="form-group">
    <label for="postTitle">Title</label>
    <input type="text" id="postTitle" class="postTitle" aria-describedby="postTitle" name="postTitle" value="<%=title%>" readonly/>
  </div>
  <div class="form-group">
    <label for="postAuthor">Author</label>
    <input type="text" id="postAuthor" class="postAuthor" aria-describedby="postAuthor" name="postAuthor" placeholder="Your Name" value="<%=author%>"  oninput="check()" required>
  </div>
  <div class="form-group">
    <label for="Content">Post</label>
    <textarea class="Content" id ="Content" name="Content" rows="3" placeholder="Your Post" oninput="check()" required><%=text%></textarea>
  </div>

  <div class="form-group">
    <label for="password">Password</label>
    <input type="password" id="password" class="password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="must have uppercase,lowercase,numbers" aria-describedby="password" name="password" placeholder="Enter your valid Password" oninput="check()" required >
    <i class="fa-solid fa-eye showIcon"></i>
  </div>
  <div class="form">
    <input type="radio" id="edit" name="options" value="Edit" required/>
    <label for="edit">Edit</label>
    <input type="radio" id="delete" name="options" value="Delete" />
    <label for="delete">Delete</label>
  </div>
  <button type="submit" class="btn" onsubmit="checkFields()">Update</button>
</form>
<h4 class="note">Note</h4>
<ul class="notePoints">
  <li><i class="icon1 fa-solid fa-circle-xmark"></i>Must add Title to your post</li>
  <li><i class="icon2 fa-solid fa-circle-xmark"></i>Your Post must contain miniumum 50 characters</li>
  <li><i class="icon3 fa-solid fa-circle-xmark"></i>Your Password must have minimum 8 characters</li>
</ul>

<%- include('footer'); -%>
